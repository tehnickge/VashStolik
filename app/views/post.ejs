<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
<body>
  <%- include('./partials/nav.ejs') %>
  <article>
    <div class="info">
      <span><%= post.createdAt.toLocaleDateString() || "No date"%></span>
      <span><%= post.author %></span>
    </div>
    <h1><%= post.title %></h1>
    <p><%= post.text %></p>
    <a href="/edit/<%= post.id %>" class="btn-edit" style="margin-top: 25px;">
      <i class="fas fa-edit"></i>
    </a>
    <button class="btn-delete" data-id="<%= post.id %>" style="margin-top: 25px;">
      <i class="fas fa-trash-alt" data-id="<%= post.id %>"></i>
    </button>
  </article>

  <script>
    document.addEventListener('click', (e)=> {
      const id = e.target?.dataset?.id || null;
      if(id){
        fetch(`/posts/${id}`,{
          method: "DELETE",
        }).then(() => {
          //window.location.reload();
          window.Location.href = '/posts';
        });
      }
    });
  </script>
  <%- include('./partials/link.ejs') %>
</body>
</html>